<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Search Quotes</title>
</head>
<body style="background-color: #242131;">
    <%- include('navbar') %>
    <div class="container mb-5 p-3">
        <h1 class="text-center mb-4">Search for Quotes</h1>

        <!-- Search Form -->
        <form action="/search-quotes" method="GET" class="mb-5">
            <div class="input-group">
                <input type="text" name="query" class="form-control" placeholder="Enter keyword" required>
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>

        <!-- Results Section -->
        <div class="mb-5">
            <h2 class="mb-3">Results:</h2>
            <% if (quotes && quotes.length > 0) { %>
                <ul class="list-group mb-5" >
                    <% quotes.forEach(quote => { %>
                        <li class="list-group-item " style="background-color: transparent; color: #fff; box-shadow: 5px 7px 10px #483376;">
                            <strong>"<%= quote.content %>"</strong> - <%= quote.author ? quote.author : 'Unknown' %>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p class="text-muted">No quotes found.</p>
            <% } %>
        </div>
    </div>

    <%- include('footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
